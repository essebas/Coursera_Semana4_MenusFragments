        android:gravity="center_vertical"
        android:weightSum="3"
        android:padding="@dimen/actionbar_linlayoutgeneral_padding">

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/actionbar_linLayout_logo"
